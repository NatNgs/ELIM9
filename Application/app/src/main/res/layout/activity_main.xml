<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.unice.polytech.elim9.Activity1">

    <Switch
        android:text="@string/monitoringActivatedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switchOnOff"
        android:checked="false"
        android:onClick="monitoringToggled"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/phoneModelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneModelLabel"
        android:layout_below="@+id/switchOnOff"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorSecondary" />

    <TextView
        android:text="@string/unknownText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phoneModelLabel"
        android:layout_toEndOf="@+id/phoneModelLabel"
        android:id="@+id/phoneModelValue"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="@string/MyPhoneStatsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneModelLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/myPhoneLabel"
        android:textColor="@color/colorSecondary" />

    <include layout="@layout/stats_tab_layout"
        android:id="@+id/myPhoneStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myPhoneLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/otherPhoneStatsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/otherPhoneStatsLabel"
        android:layout_below="@+id/myPhoneStats"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorSecondary" />

    <include layout="@layout/stats_tab_layout"
        android:id="@+id/otherPhoneStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherPhoneStatsLabel"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/synchronizeButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/synchronizeButton"
        android:onClick="synchronizeData" />

</RelativeLayout>
